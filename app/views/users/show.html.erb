<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
        <%= render 'shared/stats' %>
      </section>
  </aside>
  
  <div class="col-md-8">
      <h3>hogeMicroposts</h3>
      <% @houses.each do |house| %>
        <li>
          <%= link_to house.title, house %>
        </li>
      <% end %>
  </div>
  
  <% favos = Favorite.where(user_id:@user.id) %>
  <% favos.each do |favo| %>
    <li>
      <%favo_house = House.find(favo.house_id)%>
      <%= link_to favo_house.title, favo_house %>
    </li>
  <% end %>
  
</div>